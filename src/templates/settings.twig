{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("superbig\\bugsnag\\assetbundles\\bugsnag\\BugsnagAsset") %}

{{ forms.lightswitchField({
    label: 'Enabled',
    instructions: 'Enable exception logging',
    id: 'enabled',
    name: 'enabled',
    on: settings['enabled']})
}}

{{ forms.textField({
    label: 'Server API key',
    instructions: 'You can find the API key immediately after creating a new project from your Bugsnag dashboard, or later on your projectâ€™s settings page.',
    id: 'serverApiKey',
    name: 'serverApiKey',
    value: settings['serverApiKey']})
}}

{{ forms.textField({
    label: 'Release stage',
    instructions: '',
    id: 'releaseStage',
    name: 'releaseStage',
    value: settings['releaseStage']})
}}

{% set blacklistItems = settings.getBlacklist() %}

{{ forms.editableTableField({
    label: 'Blacklist',
    instructions: 'Disable certain types of exceptions. Class have to be fully namespaced. (i.e. \\yii\\web\\NotFoundHttpException)',
    id: 'blacklist',
    name: 'blacklist',
    cols: {
        label: {
            type: 'singleline',
            heading: 'Label',
            code: true
        },
        class: {
            type: 'singleline',
            heading: 'Class',
            code: true
        }
    },
    rows: blacklistItems
})
}}